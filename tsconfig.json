{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["@types", "node_modules/@types"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["dist"]
}
